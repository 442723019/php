.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #1890ff;
}

/* 设备列表样式 */
.machine-list {
  margin-bottom: 40rpx;
}

.machine-item {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid transparent;
}

.machine-item.selected {
  border-color: #1890ff;
  background-color: #e6f7ff;
}

.machine-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.machine-name {
  font-size: 32rpx;
  font-weight: bold;
}

.machine-status {
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.machine-status.running {
  background-color: #e6f7ff;
  color: #1890ff;
}

.machine-status.idle {
  background-color: #f6ffed;
  color: #52c41a;
}

.machine-status.error {
  background-color: #fff1f0;
  color: #f5222d;
}

.machine-status.offline {
  background-color: #f5f5f5;
  color: #999;
}

.machine-info {
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  margin-bottom: 10rpx;
}

.info-item .label {
  color: #666;
  width: 160rpx;
}

.info-item .value {
  color: #333;
  flex: 1;
}

/* 控制面板样式 */
.control-panel {
  background: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.machine-selector {
  margin-bottom: 20rpx;
}

.machine-selector .picker {
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
  padding: 10rpx;
}

.control-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.control-btn {
  flex: 1;
  min-width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 4rpx;
  font-size: 28rpx;
}

.control-btn.primary {
  background: #1890ff;
  color: #fff;
}

.control-btn.danger {
  background: #ff4d4f;
  color: #fff;
}

.control-btn.warning {
  background: #faad14;
  color: #fff;
}

.control-btn.success {
  background: #52c41a;
  color: #fff;
}

.status-panel {
  background: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
}

.status-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.status-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.status-label {
  color: #666;
}

.status-value {
  color: #333;
}

.status-value.running {
  color: #1890ff;
}

.status-value.idle {
  color: #52c41a;
}

.status-value.error {
  color: #ff4d4f;
}

.loading-state, .error-state {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.error-state {
  color: #ff4d4f;
}

/* 空状态和加载状态 */
.empty, .loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 未选择设备提示 */
.no-selection {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-top: 40rpx;
} 