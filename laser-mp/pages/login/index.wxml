<view class="container">
  <view class="login-box">
    <view class="title">设备管理系统</view>
    <view class="form">
      <view class="form-item">
        <input 
          class="input" 
          placeholder="请输入用户名" 
          value="{{username}}"
          bindinput="onUsernameInput"
        />
      </view>
      <view class="form-item">
        <input 
          class="input" 
          placeholder="请输入密码" 
          password 
          value="{{password}}"
          bindinput="onPasswordInput"
        />
      </view>
      <button 
        class="login-btn" 
        type="primary" 
        loading="{{loading}}"
        bindtap="handleLogin"
      >
        登录
      </button>
    </view>
  </view>
</view> 